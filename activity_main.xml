<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/imagee"
    android:gravity="center"
    android:orientation="vertical">

    <EditText
        android:id="@+id/editTextText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:height="100dp"
        android:background="#A9070707"
        android:backgroundTint="#A9070707"
        android:inputType="text"
        android:text="Name"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textColor="#E9DEDE"
        android:textColorHint="#FCEFEFEC"
        android:textColorLink="#EDE3E3"
        android:textSize="40sp" />

    <EditText
        android:id="@+id/editTextText2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:background="#67070707"
        android:backgroundTint="#67070707"
        android:inputType="text"
        android:text="Phone No."
        android:textAlignment="center"
        android:textColor="#EBE3E3"
        android:textColorHighlight="#F4ECEC"
        android:textColorHint="#E4E1E1"
        android:textColorLink="#F6EFEF"
        android:textSize="40sp" />

    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:backgroundTint="#5F000000"
        android:text="Button" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="TextView" />

</LinearLayout>
